{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "rules": {
//        "space-before-function-paren": "off",
//        "no-var": "off",
//        "no-undef": "off",
//        "no-unused-vars": "off",
//        "semi": "off",
//        "padded-blocks": "off",
//        "space-before-blocks": "off",
//        "quotes": "off",
//        "valid-jsdoc": "off",
//        "prefer-rest-params": "off",
        "keyword-spacing": "off",
        "require-jsdoc": "off",
        "spaced-comment": "off",
        "new-cap": "off",
        "block-spacing": "off",
        "key-spacing": "off",
        "comma-dangle": "off",
        "no-multiple-empty-lines": "off",
        "object-curly-spacing": "off",
        "computed-property-spacing": "off",
        "no-redeclare": "off",
        "curly": "off",
        "comma-spacing": "off",
        "quote-props": "off",
        "one-var": "off",
        "no-throw-literal": "off",
        "no-irregular-whitespace": "off",
        "array-bracket-spacing": "off",
        "no-dupe-keys": "off",
        "no-multi-spaces": "off",
        "no-console": "off",
        "camelcase": "off",
        "valid-jsdoc": [
            "error",
            {
                "requireParamDescription": false,
                "requireReturnDescription": false,
                "requireReturn": false,
                "prefer": {
                    "returns": "returns"
                }
            }
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "startGame|respawnPlayer|createScene|initCameraAndPlayer|handle.*"
            }
        ],
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreUrls": true,
                "ignoreStrings": true,
                "ignoreTrailingComments": true
            }
        ]
    }
}
